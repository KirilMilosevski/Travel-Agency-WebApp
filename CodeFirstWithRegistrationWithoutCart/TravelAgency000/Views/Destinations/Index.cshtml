@model IEnumerable<TravelAgency000.Models.Destination>

@{
    ViewData["Title"] = "Index";
}

<h1>Enter a new destination</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
          
            <td>
                <img src="@item.Photo" style="max-width: 300px" />
            </td>
            <td>
                <ul style="list-style: none;" class="col-lg-12 col-md-12 col-sm-12">
                    <li>
                        <a asp-action="Edit" class="col-lg-12 col-md-12 col-sm-12 btn btn-outline-primary font-weight-bold border-width-2" asp-route-id="@item.ItemId">Edit</a>
                    </li>
                    <br />

                    <li>
                        <a asp-action="Delete" class="col-lg-12 col-md-12 col-sm-12 btn btn-outline-danger font-weight-bold border-width-2" asp-route-id="@item.ItemId">Delete</a>
                    </li>
                </ul>
            </td>

        </tr>
}
    </tbody>
</table>
